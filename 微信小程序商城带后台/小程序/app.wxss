/**app.wxss**/

page {
  background: #f9f9f9;
}

.bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 144rpx;
  z-index: -1
}

.empty-list {
  display: flex;
  flex-direction: column;
  margin: 40rpx 30rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.05);
  height: 420rpx;
  justify-content: center;
  align-items: center;
}

.empty-image {
  margin-bottom: 29rpx;
  width: 90rpx;
  height: 90rpx;
  opacity: 0.4;
}

.empty-text {
  font-size: 28rpx;
  line-height: 42rpx;
  color: rgba(139, 139, 139, 0.8);
}
